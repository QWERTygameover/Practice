<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="189*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbLogin" Grid.Column="1" HorizontalAlignment="Left" Margin="261,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="22"/>
        <Label Grid.Column="1" Content="Login" HorizontalAlignment="Left" Margin="218,185,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbPassword" Grid.Column="1" HorizontalAlignment="Left" Margin="261,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="22"/>
        <Label Grid.Column="1" Content="Password" HorizontalAlignment="Left" Margin="198,228,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnEnter" Grid.Column="1" Content="Войти" HorizontalAlignment="Left" Margin="261,268,0,0" VerticalAlignment="Top" Width="190" Click="btnEnter_Click"/>

    </Grid>
</Window>
